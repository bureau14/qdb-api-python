<?xml version="1.0" encoding="UTF-8"?>
<build-type xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="https://www.jetbrains.com/teamcity/schemas/2021.1/project-config.xsd">
  <name>Composite</name>
  <description>Build all artifacts, including debug</description>
  <settings>
    <options>
      <option name="buildConfigurationType" value="COMPOSITE" />
      <option name="showDependenciesChanges" value="true" />
    </options>
    <parameters />
    <build-runners />
    <vcs-settings>
      <vcs-entry-ref root-id="QdbApiPython" />
    </vcs-settings>
    <requirements />
    <build-triggers>
      <build-trigger id="TRIGGER_2" type="vcsTrigger">
        <parameters>
          <param name="branchFilter" value="+:&lt;default&gt;" />
          <param name="enableQueueOptimization" value="true" />
          <param name="quietPeriodMode" value="DO_NOT_USE" />
        </parameters>
      </build-trigger>
    </build-triggers>
    <build-extensions>
      <extension id="BUILD_EXT_1" type="notifications">
        <parameters>
          <param name="buildFinishedFailure" value="true" />
          <param name="buildFinishedSuccess" value="true" />
          <param name="firstSuccessAfterFailure" value="true" />
          <param name="notifier" value="jbSlackNotifier" />
          <param name="plugin:notificator:jbSlackNotifier:addBranch" value="true" />
          <param name="plugin:notificator:jbSlackNotifier:addBuildStatus" value="true" />
          <param name="plugin:notificator:jbSlackNotifier:addChanges" value="true" />
          <param name="plugin:notificator:jbSlackNotifier:channel" value="#tc-api" />
          <param name="plugin:notificator:jbSlackNotifier:connection" value="PROJECT_EXT_19" />
          <param name="plugin:notificator:jbSlackNotifier:maximumNumberOfChanges" value="10" />
          <param name="plugin:notificator:jbSlackNotifier:messageFormat" value="verbose" />
        </parameters>
      </extension>
    </build-extensions>
    <artifact-dependencies>
      <dependency id="ARTIFACT_DEPENDENCY_1" sourceBuildTypeId="Api_Python_Release_Composite" cleanDestination="false">
        <revisionRule name="sameChainOrLastFinished" revision="latest.sameChainOrLastFinished" />
        <artifact sourcePath="** =&gt; ." />
      </dependency>
    </artifact-dependencies>
    <dependencies>
      <depend-on sourceBuildTypeId="Api_Python_Release_Composite">
        <options>
          <option name="run-build-if-dependency-failed" value="RUN_ADD_PROBLEM" />
          <option name="take-started-build-with-same-revisions" value="true" />
          <option name="take-successful-builds-only" value="true" />
        </options>
      </depend-on>
      <depend-on sourceBuildTypeId="Api_Python_Debug_Composite">
        <options>
          <option name="run-build-if-dependency-failed" value="RUN_ADD_PROBLEM" />
          <option name="take-started-build-with-same-revisions" value="true" />
          <option name="take-successful-builds-only" value="true" />
        </options>
      </depend-on>
    </dependencies>
    <cleanup />
  </settings>
</build-type>

